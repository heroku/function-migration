{
    "openapi": "3.0.0",
    "info": {
      "description": "A service for checking credit for an account.",
      "title": "Credit rating Function"
    },
    "paths": {
      "/": {
        "post": {
          "summary": "Evaluates credit rating and decides what payment terms to offer.",
          "description": "",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/account"
                }
              }
            },
            "description": "Specifies input parameters to calculate payment term",
            "required": true
          },
          "responses": {
            "200": {
              "description": "Credit rating response",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/creditRating"
                  }
                }
              }
            },
            "405": {
              "description": "Invalid input"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "account": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            }
          }
        },
        "creditRating": {
          "type": "object",
          "properties": {
            "rating": {
              "type": "string"
            }
          }
        }
      }
    }
  }